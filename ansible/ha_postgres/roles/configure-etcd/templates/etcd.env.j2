ETCD_NAME="{{ inventory_hostname }}"
ETCD_DATA_DIR="/var/lib/etcd"
ETCD_INITIAL_CLUSTER="{{ hostvars[groups['servers'][0]]['inventory_hostname'] }}=https://{{ hostvars[groups['servers'][0]]['ansible_host'] }}:2380,{{ hostvars[groups['servers'][1]]['inventory_hostname'] }}=https://{{ hostvars[groups['servers'][1]]['ansible_host'] }}:2380,{{ hostvars[groups['servers'][2]]['inventory_hostname'] }}=https://{{ hostvars[groups['servers'][2]]['ansible_host'] }}:2380"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
ETCD_INITIAL_ADVERTISE_PEER_URLS="https://{{ ansible_host }}:2380"
ETCD_LISTEN_PEER_URLS="https://0.0.0.0:2380"
ETCD_LISTEN_CLIENT_URLS="https://0.0.0.0:2379"
ETCD_ADVERTISE_CLIENT_URLS="https://{{ ansible_host }}:2379"
ETCD_CLIENT_CERT_AUTH="true"
ETCD_TRUSTED_CA_FILE="/etc/etcd/ssl/ca.crt"
ETCD_CERT_FILE="/etc/etcd/ssl/etcd-node{{ groups['servers'].index(inventory_hostname) + 1 }}.crt"
ETCD_KEY_FILE="/etc/etcd/ssl/etcd-node{{ groups['servers'].index(inventory_hostname) + 1 }}.key"
ETCD_PEER_CLIENT_CERT_AUTH="true"
ETCD_PEER_TRUSTED_CA_FILE="/etc/etcd/ssl/ca.crt"
ETCD_PEER_CERT_FILE="/etc/etcd/ssl/etcd-node{{ groups['servers'].index(inventory_hostname) + 1 }}.crt"
ETCD_PEER_KEY_FILE="/etc/etcd/ssl/etcd-node{{ groups['servers'].index(inventory_hostname) + 1 }}.key"